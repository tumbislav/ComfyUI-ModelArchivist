{
  "compilerOptions": {
    "target": "ES5",             /* Specify ECMAScript target version: 'ES3' (default), 'ES5', 'ES2015', etc. */
    "module": "CommonJS",       /* Specify module code generation: 'None', 'CommonJS', 'AMD', 'System', 'UMD', 'ES6', or 'ES2015'. */
    "lib": ["DOM", "ES2015"],   /* Specify library files to be included in the compilation. */
    "strict": true,             /* Enable all strict type-checking options. */
    "esModuleInterop": true,    /* Enables emit interoperability between CommonJS and ES modules. */
    "skipLibCheck": true,       /* Skip type checking of declaration files. */
    "forceConsistentCasingInFileNames": true /* Ensure that casing, required by import-statements, is correct. */
  }
}